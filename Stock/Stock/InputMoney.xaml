<Window x:Class="Stock.InputMoney"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="设置本金" Height="110" Width="236" WindowStartupLocation="CenterScreen" WindowStyle="None" Background="AliceBlue">
    <Grid>
        <Label Content="本金:" HorizontalAlignment="Left" Margin="10,20,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="money" HorizontalAlignment="Left" Height="23" Margin="66,22,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button Content="取消" HorizontalAlignment="Left" Margin="129,70,0,0" VerticalAlignment="Top" Width="75" Click="ButtonClose_Click"/>
        <Button Content="确定" HorizontalAlignment="Left" Margin="20,70,0,0" VerticalAlignment="Top" Width="75" Click="ButtonOK_Click"/>
    </Grid>
</Window>
