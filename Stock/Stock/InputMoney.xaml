<Window x:Class="Stock.InputMoney"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="设置本金" Height="140" Width="236" WindowStartupLocation="CenterScreen" WindowStyle="None" Background="AliceBlue">
    <Grid>
        <Label Content="账户:" HorizontalAlignment="Left" Margin="10,15,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="name" HorizontalAlignment="Left" Height="20" Margin="66,18,0,0" TextWrapping="Wrap" Text="admin" VerticalAlignment="Top" Width="120"/>
        <Label Content="本金:" HorizontalAlignment="Left" Margin="10,55,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="money" HorizontalAlignment="Left" Height="20" Margin="66,58,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button Content="取消" HorizontalAlignment="Left" Margin="129,100,0,0" VerticalAlignment="Top" Width="75" Click="ButtonClose_Click"/>
        <Button Content="确定" HorizontalAlignment="Left" Margin="20,100,0,0" VerticalAlignment="Top" Width="75" Click="ButtonOK_Click"/>
    </Grid>
</Window>
